%div{:id => 'main', :role => "main"}
  %section{:class => "story", :id => "first", :data => {:speed => "8", :type => "background"}}
    %div.smashinglogo{:data => {:type => "sprite", :offsetY => "100", :Xposition => "50%", :speed => "4"}}
    %article.search
      %h1
        Rent whatever you want in seconds
      
      = form_tag '/search', :id => "search-form" do
        = text_field_tag 'search', "I'm looking for"
        = text_field_tag 'start_date', 'From', :id => "from-date-picker"
        = text_field_tag 'end_date', "To", :id => "to-date-picker"
        = submit_tag 'Search', :class => 'button is-inverse'

