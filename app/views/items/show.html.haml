%p
  = @item.title
%p
  = @item.description
%p
  = "$" + @item.price.to_s
%p
  - if @item.available
    Available
  - else
    Not Available
%p
  Start Time:
  = @item.start_time.strftime("%m/%d/%Y")
%p
  End Time:
  = @item.end_time.strftime("%m/%d/%Y")
- @item.photos.each do |photo|
  %p
    =link_to image_tag(photo.file.url(:thumb)), "#{photo.file}", {class: 'fancybox', rel: 'group1'}