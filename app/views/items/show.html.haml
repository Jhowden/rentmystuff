.wrapper
  .col-66.cf.center
    .item-show
      %h1
        = @item.title
      .gallery
        - @item.photos.each do |photo|
          .photo
            =link_to image_tag(photo.file.url(:thumb)), "#{photo.file}", {class: 'fancybox', rel: 'group1'}
      %p
        = @item.description

  .col-33.cf.item-borrow
    %span.price
      Price
    %h2
      = "$" + @item.price.to_s
    - if @item.available
      .availability#datepick
    - else
      Not Available

:javascript
    $('#datepick').datepicker();
