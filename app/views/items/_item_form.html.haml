= form_for @item do |f|
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :description
    = f.text_area :description
  %p
    = f.label :start_time
    = f.date_select :start_time
  %p
    = f.label :end_time
    = f.date_select :end_time
  %p
    = f.label :price
    = f.text_field :price
  %p
    = f.submit
