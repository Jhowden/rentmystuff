= form_for [current_user, @item], :html => {:multipart => true} do |f|
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :description
    = f.text_area :description
  %p
    = text_field_tag :start_date,'Available From', :id => 'from-date-picker'
  %p
    = text_field_tag :end_date, 'To', :id => 'to-date-picker'
  %p
    = f.label :price
    = f.text_field :price
  = fields_for :photo, @item.photos do |photo|
    %p
      = photo.label :file, "Image"
      = photo.file_field :file
    %p
      %span{class: "addVar"}Add Image
  %p
    = f.submit
