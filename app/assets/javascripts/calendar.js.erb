$(document).ready(function(){

  if (($('form').data('max') != undefined)){
    var max = $('form').data('max');
    var disabled = $('form').data('inavailable').split(' ')

    $('.multi-date-picker').datepicker({
      constrainInput: true,
      beforeShowDay: function(date){
        var string = jQuery.datepicker.formatDate('yy-mm-dd', date);
        return [ disabled.indexOf(string) == -1 ];
      },




      minDate: 0,
      maxDate: max
    });

  }


  $('.search-date-picker').datepicker({
    minDate: 0,
    maxDate: 60
  })
});

